import javax.swing.JOptionPane;

public class Fivemadjos {
    public static void main(String[] args) {
        int[] arr = {3, 8, 12, 5, 7, 20, 9};
        
        String input = JOptionPane.showInputDialog("Enter a number to search:");
        int target = Integer.parseInt(input);

        boolean found = false;

        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == target) {
                found = true;
                break;
            }
        }

        if (found)
            JOptionPane.showMessageDialog(null, "Value found! Loop stopped early.");
        else
            JOptionPane.showMessageDialog(null, "Value NOT found.");
    }
}
