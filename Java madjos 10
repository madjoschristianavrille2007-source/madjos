import javax.swing.*;

public class Tenjos{
    public static void main(String[] args) {
        int[] arr = {5, 9, 3, 2, 7};
        int index = -1;

        for (int i = 0; i < arr.length; i++) {
            if (arr[i] % 2 == 0) {
                index = i;
                break;
            }
        }

        JOptionPane.showMessageDialog(null, "First even number index = " + index);
    }
}
