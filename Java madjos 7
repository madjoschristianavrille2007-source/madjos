import javax.swing.*;

public class Sevenjos {
    public static void main(String[] args) {
        int[] arr = {-5, 10, -7, 4, -1};

        for (int i = 0; i < arr.length; i++) {
            if (arr[i] < 0) arr[i] = -arr[i];
        }

        JOptionPane.showMessageDialog(null, "Converted values: " + java.util.Arrays.toString(arr));
    }
}
